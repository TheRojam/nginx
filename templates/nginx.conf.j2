
user www-data;
worker_processes auto;
pid /run/nginx.pid;

events {
    worker_connections 768;
}

http {
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    server_tokens off;
    
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2; 


    ssl_prefer_server_ciphers on;

    log_format ext_combined
        '[$time_iso8601] >>$upstream_addr <<$remote_addr - '
        '$status $request_method $scheme://$host$request_uri '
        '>>$bytes_sent($body_bytes_sent)bytes '
        '<<"$http_referer" -- <$http_user_agent> $request';

    access_log /var/log/nginx/access.log;
    access_log /var/log/nginx/access_ext_combined.log ext_combined;
    error_log /var/log/nginx/error.log;

    gzip on;
    gzip_disable "msie6";
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
    {% for served_domain in served_domains %}
        server {

            index {% for item in index %}
                {{ item }}
            {% endfor %};

            {% if server.https %}
                listen 443;
                ssl on;

            {% else %}
                listen 80;
            {% endif %} 
            server_name {% for domain in server.domains %}
                {% if domain_suffixe %}
                    {% for suffix in domain_suffixe %}
                        {{ domain.suffix }}
                    {% endfor %}
                    
                {% endif %}
                {% if domain.endswith('.') %}
                    {{domain}}
                {% endif %}
            {% endfor %};

            {% for location_var in server.locations %}
                location {{location_var.condition}} {
                    {% for ip_range in allowed_ip_ranges %}
                        allow {{ip_range}};
                        deny all;
                    {% endfor %}
                    {{ location_var.content }}
                }

            {% endfor %}
    {% endfor %}
    
}